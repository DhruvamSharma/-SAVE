<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout"
    android:background="@drawable/notification_try_background"
    tools:context="dell.trialsecond.HomeFragment"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/notification_try_background"
        android:layout_marginBottom="@dimen/dimen_56dp">





        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:id="@+id/replacableLayout"
            android:layout_marginTop="?actionBarSize"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:layout_height="0dp"
            android:layout_weight="2">




            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                cardview:cardElevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/frameLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <RelativeLayout
                            android:id="@+id/background"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:background="@drawable/notification_try_background" >



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Let's Save Them"
                            android:textColor="@android:color/white"
                            android:fontFamily="sans-serif-light"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                            android:textSize="25sp"
                            android:id="@+id/name"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:orientation="horizontal"
                            android:layout_below="@+id/name"
                            android:layout_marginTop="10dp"

                            android:id="@+id/linear_layout"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#UNITY"
                                android:textColor="@android:color/white"
                                android:layout_gravity="top|start"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed"
                                android:textSize="14sp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#ANIMALS"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:layout_gravity="top|start"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_marginStart="10dp"
                                android:textSize="14sp"
                                />


                        </LinearLayout>

                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/card_view_2"
                                android:layout_below="@id/linear_layout"
                                android:layout_marginTop="@dimen/activity_horizontal_margin"
                                android:layout_marginStart="30dp"
                                >
                                <View
                                    android:layout_width="90dp"
                                    android:layout_height="10dp"
                                    android:id="@+id/view"
                                    android:background="@color/colorAccent"/>

                            </android.support.v7.widget.CardView>

                          <!--  <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/card_view_3"
                                android:layout_below="@id/card_view_2"
                                android:layout_marginTop="@dimen/activity_horizontal_margin"
                                android:layout_marginStart="30dp"
                                >
                                <View
                                    android:layout_width="45dp"
                                    android:layout_height="3dp"
                                    android:id="@+id/view_2"
                                    android:background="@color/colorAccent"/>

                            </android.support.v7.widget.CardView>-->

                            <android.support.v4.view.ViewPager
                                android:id="@+id/viewPager"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/card_view_2"
                                android:clipToPadding="false"
                                android:overScrollMode="never"
                                android:layout_marginTop="@dimen/activity_horizontal_margin"
                                android:paddingEnd="@dimen/card_padding"
                                android:paddingLeft="@dimen/card_padding"
                                android:paddingRight="@dimen/card_padding"
                                android:paddingStart="@dimen/card_padding"


                                />

                    </RelativeLayout>



















                        <LinearLayout
                            android:id="@+id/linearView2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="@color/colorAccent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/layoutButtons2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <Button
                                    style="@style/Button"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:text="@string/duplicate" />

                                <Button
                                    style="@style/Button"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:text="@string/schedule" />

                                <Button
                                    style="@style/Button"
                                    android:text="@string/delete" />


                            </LinearLayout>

                        </LinearLayout>



                    </FrameLayout>







                </RelativeLayout>


            </android.support.v7.widget.CardView>





            <android.support.design.widget.FloatingActionButton
                android:id="@+id/launchTwitterAnimation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:adjustViewBounds="true"
                android:contentDescription="@string/image"
                android:src="@drawable/ic_notifications_white_18dp"
                app:elevation="24dp"
                app:fabSize="normal"
                app:layout_anchor="@id/background"
                app:layout_anchorGravity="bottom|end" />

        </android.support.design.widget.CoordinatorLayout>





    </LinearLayout>




    </FrameLayout>






